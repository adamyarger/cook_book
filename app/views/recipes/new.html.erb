<%= form_for :recipe, url: recipes_path do |f| %>
    <%= f.text_field :title, placeholder: "Pasta", class: 'full-width' %>
    <br>
    <%= f.text_area :ingredients, placeholder: "Wait... How good is this song?", class: "form-control" %>
    <%= f.submit "Submit Post", class: "full-width" %>

<% end %>