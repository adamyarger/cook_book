<%= form_for :recipe, url: recipes_path do |f| %>
    

    <%= f.text_field :title, placeholder: "Pasta", class: 'form-control' %>
    <br>
    <%= f.text_field :cooktime, placeholder: "how many minutes will this take?", class: 'form-control' %>
    <br>
    <%= f.text_field :servings, placeholder: "serving size", class: 'form-control' %>
    <br>
    <%= f.text_area :description, placeholder: "description", class: "form-control" %>
    <br>
    <%= f.text_area :ingredients, placeholder: "what are the ingredients", class: "form-control" %>
    <br>
    <%= f.text_area :directions, placeholder: "directions", class: "form-control" %>
    <br>
    <%= f.file_field :picture %>
    <br>
    <%= f.submit "Submit Post", class: "btn btn-primary" %>

<% end %>