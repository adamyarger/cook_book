


  <div class="row">
    <% @recipes.each do |recipe| %>
      <div class="col-md-3">
        <div class="recipe">
          <div class="image_wrapper">
            <%= link_to recipe do %>
              <%= image_tag recipe.picture.url(:medium) %>
            <% end %>
          </div>
          <h2>
            <%= link_to recipe.title, recipe %>
          </h2>
          <p>By <%= recipe.user.email %></p>
          <p id="cook-time"><%= recipe.cooktime %> minutes</p>
        </div>
      </div>
    <% end %>
  </div>

